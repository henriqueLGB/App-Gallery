<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.Xamarin_forms.Layouts.QuadradoLayout.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="40">

            <Frame HorizontalOptions="Center" CornerRadius="100" Padding="0" IsClippedToBounds="True">
                <BoxView Color="green" HeightRequest="150" WidthRequest="150"/>
            </Frame>
            
            <Frame Padding="0"> 
                <StackLayout>
                    <Label Text="Stanley Kubrick" FontSize="24" TextColor="Black" HorizontalOptions="Center" Margin="20,20,20,10"/>
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand"/>
                    <Label Text="Diretor de vários filmes famosos" Margin="20"/>
                </StackLayout>
            </Frame>
            
            <Frame HasShadow="True" CornerRadius="20" BorderColor="Black">
                <Label  Text="Welcome to Xamarin.Forms!"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>