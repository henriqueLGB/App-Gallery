<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.Xamarin_forms.Layouts.ControleLayout.CardHorizontal"
             x:Name="Card">
    
  <ContentView.Content>
        <StackLayout BackgroundColor="{Binding Cor}" Padding="20" BindingContext="{x:Reference Card}">
            <Label Text="{Binding Titulo}" TextColor="White" FontSize="36"/>
            <Label Text="{Binding Texto}"  TextColor="White" FontSize="18"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>