<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10"
             x:Class="AppGallery.Xamarin_forms.Controles.Switch.Switch">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsToggled" />
            <Switch HorizontalOptions="Start" IsToggled="True"/>

            <Label Text="OnColor, ThumbColor" />
            <Switch HorizontalOptions="Start" OnColor="Green" ThumbColor="GreenYellow"/>

            <Label Text="Evento: Toggled" />
            <Switch HorizontalOptions="Start" Toggled="Switch_Toggled"/>

            <Label x:Name="lblInformativo" Text="-" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>