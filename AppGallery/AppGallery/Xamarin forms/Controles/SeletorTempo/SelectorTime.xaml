<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10"
             x:Class="AppGallery.Xamarin_forms.Controles.SeletorTempo.SelectorTime">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Time,Format" />
            <TimePicker Time="15:00" Format="HH:mm"/>

            <Label Text="TextColor, FontFamily, Fontsize, FontAttributes, CharacterSpacing"/>
            <TimePicker TextColor="Blue" FontFamily="sans-serif-light" FontAttributes="Italic" FontSize="18" CharacterSpacing="2"/>


            <Label Text="PropertyChanged" />
            <TimePicker PropertyChanged="TimePicker_PropertyChanged"/>

            <Label x:Name="lblInformativo" Text="-" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>