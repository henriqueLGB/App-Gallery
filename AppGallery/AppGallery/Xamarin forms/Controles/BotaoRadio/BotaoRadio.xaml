<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10"
             x:Class="AppGallery.Xamarin_forms.Controles.BotaoRadio.BotaoRadio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsChecked, Text, TextColor" />
            <RadioButton  IsChecked="True"  Content="C#"    TextColor="Blue" FontFamily="sans-serif-thin"/>
            <RadioButton  IsChecked="False" Content="PHP"   TextColor="Red"  FontFamily="sans-serif-light"/>
            <RadioButton  IsChecked="False" Content="Java"  TextColor="Green"/>

            <Label Text="GroupName, CheckedChanged"/>
            <RadioButton  IsChecked="True" Content="Javascript" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton  IsChecked="False" Content="SASS" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton  IsChecked="False" Content="HTML" GroupName="FrontEnd" CheckedChanged="RadioButton_CheckedChanged"/>

            <Label x:Name="lblInformativo" Text="-"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>