<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10"
             x:Class="AppGallery.Xamarin_forms.Controles.BarraPesquisa.BarraDePesquisa">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Text, TextColor"/>
            <SearchBar Text="Pesquisando motos..." TextColor="Blue"/>

            <Label Text="Placeholder,PlaceholderColor" />
            <SearchBar Placeholder="Digite a palavra que deseja pesquisar" PlaceholderColor="Gray"/>

            <Label Text="FontFamily, FontSize, FontAttributes, CharacterSpacing" />
            <SearchBar FontFamily="sans-serif-light" FontSize="18" FontAttributes="Italic" CharacterSpacing="2"/>

            <Label Text="CancelButtonColor" />
            <SearchBar CancelButtonColor="Red"/>

            <Label Text="Eventos: TextChanged, SearchButtonPressed"/>
            <SearchBar  TextChanged="SearchBar_TextChanged" SearchButtonPressed="SearchBar_SearchButtonPressed"/>

            <Label x:Name="lblTextChanged"          Text="-"/>
            <Label x:Name="lblSearchButtonPressed"  Text="-"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>