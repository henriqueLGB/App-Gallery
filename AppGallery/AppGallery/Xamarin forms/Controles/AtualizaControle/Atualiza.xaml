<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.Xamarin_forms.Controles.AtualizaControle.Atualiza">
    <ContentPage.Content>
        <RefreshView RefreshColor="Blue" IsRefreshing="False" Refreshing="RefreshView_Refreshing">
            <ScrollView>
                <StackLayout>
                    <Label Text="RefreshView" />
                    <Label Text="Propriedades: RefreshColor, IsRefreshing" />
                    <Label Text="Eventos: Refreshing" />
                    <Label Text="Observações: Barra de Rolagem - ScrollView, ListView, CollectionView, CarouselView" />
                    <Label x:Name="lblStatus" Text="Não atualizado!" TextColor="Red" FontSize="24" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>