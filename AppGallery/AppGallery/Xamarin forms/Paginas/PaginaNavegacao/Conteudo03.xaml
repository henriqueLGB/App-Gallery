<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.Xamarin_forms.Paginas.PaginaNavegacao.Conteudo03"
             NavigationPage.HasBackButton="False"
             Title="Conteúdo 03">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Inserir página na pilha" Clicked="EventoInserirPilha"/>
            <Button Text="Remover página na pilha" Clicked="EventoRemoverPilha"/>
            
            <Label Text="Página de Conteúdo 03"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button Text="Voltar" Clicked="EventoVoltar"/>
            <Button Text="Voltar para o ínicio" Clicked="EventoVoltarParaInicio"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>